<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="470.0" prefWidth="738.0"
      xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.gerenciador_de_sistemas.controller.ProfessorController">

    <children>

        <!-- MENU SUPERIOR -->
        <MenuBar prefHeight="32.0" prefWidth="738.0">
            <menus>
                <Menu mnemonicParsing="false" text="Sistema Acadêmico">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Sobre"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <!-- FORMULÁRIO + BOTÕES -->
        <VBox prefHeight="200.0" prefWidth="738.0">
            <children>

                <!-- FORMULÁRIO -->
                <GridPane prefHeight="140.0" prefWidth="600.0" hgap="5.0" vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="120.0"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints prefHeight="40.0" vgrow="SOMETIMES"/>
                        <RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints prefHeight="40.0" vgrow="SOMETIMES"/>
                        <RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints prefHeight="40.0" vgrow="SOMETIMES"/>
                    </rowConstraints>

                    <children>
                        <!-- Nome -->
                        <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0">
                            <font>
                                <Font size="10.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="txtNome" promptText="Digite o nome do professor"
                                   GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

                        <!-- Email -->
                        <Label text="E-mail:" GridPane.rowIndex="2" GridPane.columnIndex="0">
                            <font>
                                <Font size="10.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="txtEmail" promptText="Digite o e-mail do professor"
                                   GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

                        <!-- Formação -->
                        <Label text="Formação:" GridPane.rowIndex="4" GridPane.columnIndex="0">
                            <font>
                                <Font size="10.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="txtFormacao" promptText="Digite a formação do professor"
                                   GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                    </children>
                </GridPane>

                <!-- BOTÕES -->
                <HBox alignment="CENTER" spacing="5.0" prefHeight="60.0" prefWidth="738.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onNovo"
                                prefWidth="110.0" style="-fx-background-color: #3385ff;"
                                text="Novo" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>

                        <Button mnemonicParsing="false" onAction="#onSalvar"
                                prefWidth="110.0" style="-fx-background-color: #3385ff;"
                                text="Salvar" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>

                        <Button mnemonicParsing="false" onAction="#onExcluir"
                                prefWidth="110.0" style="-fx-background-color: #3385ff;"
                                text="Excluir" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" bottom="10.0"/>
                    </VBox.margin>
                </HBox>

            </children>
            <padding>
                <Insets top="10.0" left="20.0" right="20.0"/>
            </padding>
        </VBox>

        <!-- TABELA DE PROFESSORES -->
        <TableView fx:id="tbProfessores" prefHeight="240.0" prefWidth="738.0"
                   onMouseClicked="#onTabelaClick">
            <columns>
                <TableColumn fx:id="colId" prefWidth="60.0" text="ID"/>
                <TableColumn fx:id="colNome" prefWidth="250.0" text="NOME"/>
                <TableColumn fx:id="colEmail" prefWidth="250.0" text="E-MAIL"/>
                <TableColumn fx:id="colFormacao" prefWidth="178.0" text="FORMAÇÃO"/>
            </columns>
        </TableView>

    </children>
</VBox>
