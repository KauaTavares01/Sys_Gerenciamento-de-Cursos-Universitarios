<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.gerenciador_de_sistemas.controller.mainController"
      alignment="TOP_CENTER"
      spacing="15.0"
      prefWidth="600.0"
      prefHeight="400.0">

    <children>

        <!-- TÍTULO -->
        <Label text="Sistema de Gerenciamento de Cursos Universitários">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>

        <!-- BOTÕES -->
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button text="Gerenciar Cursos" onAction="#abrirCursos" prefWidth="140.0"/>
                <Button text="Gerenciar Disciplinas" onAction="#abrirDisciplinas" prefWidth="160.0"/>
                <Button text="Gerenciar Professores" onAction="#abrirProfessores" prefWidth="160.0"/>
                <Button text="Gerenciar Turmas" onAction="#abrirTurmas" prefWidth="140.0"/>
            </children>
        </HBox>

        <!-- LABEL DO RESUMO -->
        <Label text="Resumo geral do sistema">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>

        <!-- TABELA RESUMO -->
        <TableView fx:id="tbResumo" prefHeight="250.0" prefWidth="550.0">
            <columns>
                <TableColumn fx:id="colTipo" prefWidth="150.0" text="Tipo"/>
                <TableColumn fx:id="colTotal" prefWidth="100.0" text="Total"/>
                <TableColumn fx:id="colUltimo" prefWidth="300.0" text="Último cadastrado"/>
            </columns>
        </TableView>

    </children>

    <padding>
        <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
    </padding>
</VBox>
